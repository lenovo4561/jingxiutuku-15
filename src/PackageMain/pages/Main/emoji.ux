<template>
  <div class="page-wrapper">
    <!-- 顶部Banner -->
    <image class="banner-image" src="/PackageMain/assets/img/biaoqiangbao-banner.png"></image>
    
    <!-- 表情包列表 -->
    <list class="content-list">
      <list-item type="emoji-row" class="content-row" for="{{(rowIndex, row) in emojiRows}}">
        <div class="grid-item" for="{{(itemIndex, item) in row}}" onclick="goToDetail(item.index)">
          <image class="emoji-img" src="{{item.url}}"></image>
        </div>
      </list-item>
      <!-- 底部垫高，防止被导航栏遮挡 -->
      <list-item type="footer" class="footer-spacer"></list-item>
    </list>
  </div>
</template>

<script>
import router from '@system.router'

export default {
  data() {
    // 生成40张表情包数据
    const emojis = []
    for (let i = 1; i <= 40; i++) {
      emojis.push({
        id: i,
        index: i - 1,
        url: `https://cdn.shijinzhuang.com/jxtk/bqb/${i}.jpg`
      })
    }
    
    // 转换为两列布局的行数据
    const rows = []
    for (let i = 0; i < emojis.length; i += 2) {
      const row = [emojis[i]]
      if (i + 1 < emojis.length) {
        row.push(emojis[i + 1])
      }
      rows.push(row)
    }
    
    return {
      emojiList: emojis,
      emojiRows: rows
    }
  },
  onInit() {
    console.log('Emoji page initialized')
  },
  goToDetail(index) {
    router.push({
      uri: '/PackageMain/pages/EmojiDetail',
      params: {
        currentIndex: index
      }
    })
  }
}
</script>

